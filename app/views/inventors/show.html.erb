<div class="row">
  <div class="col s12 center">
      <div class="card blue-grey darken-1">
          <div class="card-content white-text">
              <span class="card-title">Inventor: <%= @inventor.name %> </span>
                <p>Age: <%= @inventor.age %></p>
                <p>Speciality: <%= @inventor.speciality.titleize %></p>
                <p>Hire Date: <%= @inventor.hire_date.strftime('%B,%e %Y') %></p>
                <p>Number of Robots: <%= @robots.count %> </p>
              </div>
          <div class="card-action">
            <%= link_to 'Edit', edit_inventor_path(@inventor) %>
            <%= link_to 'Delete', inventor_path(@inventor), method: :delete,
            data: {confirm: 'Really Delete?'} %>
        </div>
      </div>
      <% if @robots.any? %>
        <h4> All Robots </h4>
        <hr />
      <% @robots.each do |robot| %>
        <div class="">
          <div class="col s12 m4 l6">
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title"><%= robot.name %></span>
                <p>Industry: <%= robot.industry %> </p>
                <p>Parts: <%= robot.parts.count %> </p>
              </div>
              <div class="card-action">
                <%= link_to 'Show', inventor_robot_path(@inventor, robot) %>
                <%= link_to 'Edit', edit_inventor_robot_path(@inventor, robot) %>
                <%= link_to 'Delete', inventor_robot_path(@inventor, robot), method: :delete,
                data: {confirm: 'Really Delete?'} %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= link_to 'New Robot', new_inventor_robot_path(@inventor), class: 'btn orange' %>
  </div>
</div>
